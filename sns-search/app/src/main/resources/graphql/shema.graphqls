type Post {
    id: Int!
    deleted: Boolean!
    createdBy: String!
    createdAt: Int!
    modifiedBy: String
    modifiedAt: Int
    content: String
}

type Comment {
    id: Int!
    deleted: Boolean!
    createdBy: String!
    createdAt: Int!
    modifiedBy: String
    modifiedAt: Int
}

input QueryFilter{
    field: String!
    value: String!
}

type Query {
    findPosts(filters: [QueryFilter!]): [Post!]!
    findComments(filters: [QueryFilter!]): [Comment!]!
}

